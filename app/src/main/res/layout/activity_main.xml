<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pacheco.saul.racersofcloud.MainActivity"
    android:orientation="vertical"
    android:weightSum="60">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="com.pacheco.saul.racersofcloud.Titulo"
        android:id="@+id/frg_titulo"
        android:layout_gravity="center_horizontal"
        android:layout_weight="26" />

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="com.pacheco.saul.racersofcloud.Principal"
        android:id="@+id/frg_principal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="8" />

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="menus.Menu"
        android:id="@+id/frg_menu"
        android:layout_gravity="center_horizontal"
        android:layout_weight="26" />
</LinearLayout>
